---

import type { BorderColor, TextColor } from "@libs/types";

interface Props {
    title: string
    textColor: TextColor
    borderColor: BorderColor
};
const { title, textColor, borderColor } = Astro.props as Props;
---

<div class="flex flex-col items-center gap-4">
    <slot name="svg" />
    <h2 class="font-semibold text-xl md:text-2xl uppercase mt-10">{title}</h2>
    <div class="relative flex justify-center px-6 py-4">
        <div class={`absolute top-0 left-0 border-t-2 border-l-2 rounded-tl-2xl ${borderColor} w-12 h-12`}></div>
        <ul class={`flex flex-col items-start md:gap-6 marker:${textColor} marker:text-3xl md:marker:text-4xl marker:align-middle list-inside list-[square] text-start text-lg md:text-xl`}>
            <slot name="list" />
        </ul>
    </div>
</div>