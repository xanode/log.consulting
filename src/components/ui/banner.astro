---
import type { Color } from "@libs/types";
interface Props {
    title: string;
    subtitle: string;
    description: string;
    color: Color;
    image: string;
}
const { title, subtitle, description, color, image } = Astro.props as Props;
---

<section class="relative w-full mt-20 mb-40">
    <div class="flex flex-col lg:flex-row items-center ">
        <div class="bg-gray-log w-full lg:w-[50vw] h-[25vw]">
            <div class={`absolute rounded-2xl bg-${color} h-[calc(100%-2rem)] w-[25vw] -top-[2rem] left-[calc(25vw-2rem)]`}></div>
            <img class="absolute w-[25vw] h-[calc(100%-2rem)] top-[2rem] left-[calc(25vw-6rem)] rounded-2xl" src={image} alt="Image" />
        </div>
        <div class="flex flex-col p-10 bg-black text-white justify-center lg:w-[50vw] h-[25vw]">
            <div class="flex flex-col gap-4 max-w-xl">
                <h1 class={`font-bold text-${color} text-3xl uppercase`}>{title}</h1>
                <h2 class="font-bold text-2xl">{subtitle}</h2>
                <p class="text-xl">{description}</p>
            </div>
        </div>
    </div>
</section>