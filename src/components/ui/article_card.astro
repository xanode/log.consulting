---
import type { BackgroundColor, BorderColor, TextColor } from '@libs/types';
interface Props {
    image: string;
    title: string;
    description: string;
    class?: string;
    bgColor: BackgroundColor;
    borderColor: BorderColor;
    textColor: TextColor;
    href?: string;
}
const { image, title, description, class: className = "lg:flex", bgColor,  borderColor, textColor, href = "#" }: Props = Astro.props;
---

<div class={className + ` overflow-hidden flex-col items-center text-center max-w-sm border-2 ${borderColor} rounded-t-[20px] font-mono`}>
    <a href={href}>
        <img src={image} alt="Image d'un article" />
    </a>
    <p class={`${bgColor} border-y-2 border-y-black text-white text-2xl px-1 py-2 w-full`}>{title}</p>
    <p class="text-xl px-4 pt-6 line-clamp-3">{description}</p>
    <a class={`font-bold text-xl ${textColor} px-4 pt-3 pb-6`} href={href}>En savoir plus</a>
</div>